{
	"name": "jweiland/powermail-salesforce",
	"type": "typo3-cms-extension",
	"description": "Powermail Salesforce integration",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"Powermail",
		"Salesforce",
		"Integration",
		"TYPO3",
		"TYPO3 CMS"
	],
	"homepage": "https://jweiland.net",
	"authors": [
		{
			"name": "Stefan Froemken",
			"email": "sfroemken@jweiland.net",
			"role": "Lead Developer"
		}
	],
	"support": {
		"email": "projects@jweiland.net",
		"issues": "https://github.com/jweiland-net/powermail2salesforce/issues",
		"source": "https://github.com/jweiland-net/powermail2salesforce"
	},
	"require": {
		"typo3/cms-core": "^8.7.32",
		"in2code/powermail": "^6.2"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^2.14"
	},
	"autoload": {
		"psr-4": {
			"JWeiland\\Powermail2salesforce\\": "Classes"
		}
	},
	"config": {
		"vendor-dir": ".build/vendor",
		"allow-plugins": {
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		}
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "powermail2salesforce",
			"app-dir": ".build",
			"web-dir": ".build/public"
		}
	},
	"scripts": {
		"php:fix": ".build/vendor/bin/php-cs-fixer --config=Build/php-cs-fixer/config.php fix Classes",
		"ci:php:lint": "find *.php Classes Configuration Tests -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l",
		"ci:php:fixer": ".build/vendor/bin/php-cs-fixer --config=Build/php-cs-fixer/config.php fix --dry-run -v --diff --show-progress=dots Classes",
		"link-extension": [
			"@php -r 'is_dir($extFolder=__DIR__.\"/.build/public/typo3conf/ext/\") || mkdir($extFolder, 0777, true);'",
			"@php -r 'file_exists($extFolder=__DIR__.\"/.build/public/typo3conf/ext/powermail2salesforce\") || symlink(__DIR__,$extFolder);'"
		],
		"post-autoload-dump": [
			"@link-extension"
		]
	}
}
